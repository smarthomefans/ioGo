<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Server Connection">

        <EditTextPreference
            android:dialogMessage="Please enter url and port from your web-adapter"
            android:key="mobile_socket_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Socket URL" />
        <EditTextPreference
            android:editable="true"
            android:inputType="text"
            android:key="mobile_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username (Optional)" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="mobile_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password (Optional)" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Cloud Connection">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pro_cloud_enabled"
            android:title="Use ioBroker.pro" />
        <EditTextPreference
            android:editable="true"
            android:inputType="textEmailAddress"
            android:key="pro_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="pro_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>
</PreferenceScreen>