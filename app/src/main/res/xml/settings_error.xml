<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/preference_category_summary"
        android:summary="logging into filesystem at storage/de.nisnagel.iogo/logs"
        android:title="Error Logging">
        <SwitchPreference
            android:key="@string/pref_error_logging"
            android:selectAllOnFocus="true"
            android:title="Enable logging" />
        <ListPreference
            android:defaultValue="6"
            android:entries="@array/logging_level"
            android:entryValues="@array/logging_levelValues"
            android:key="@string/pref_error_logging_level"
            android:title="Choose logging level" />
    </PreferenceCategory>
</PreferenceScreen>