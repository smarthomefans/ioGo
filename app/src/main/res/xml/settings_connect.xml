<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:layout="@layout/preference_category_summary"
        android:summary="app account needed"
        android:title="ioBroker.iogo">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_connect_iogo"
            android:title="Use iogo adapter" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category_summary"
        android:summary="only cloud.pro"
        android:title="ioBroker.cloud">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_connect_cloud"
            android:title="Use cloud adapter" />
        <EditTextPreference
            android:editable="true"
            android:inputType="textEmailAddress"
            android:key="@string/pref_connect_cloud_user"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/pref_connect_cloud_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/preference_category_summary"
        android:summary="only with integrated socket-io"
        android:title="ioBroker.web">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_connect_web"
            android:title="Use web adapter" />
        <EditTextPreference
            android:dialogMessage="Please enter url and port from your web-adapter"
            android:key="@string/pref_connect_web_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Socket URL" />
        <EditTextPreference
            android:editable="true"
            android:inputType="text"
            android:key="@string/pref_connect_web_user"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username (Optional)" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="@string/pref_connect_web_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password (Optional)" />
    </PreferenceCategory>
</PreferenceScreen>