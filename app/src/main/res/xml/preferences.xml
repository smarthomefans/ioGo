<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Server Connection">

        <EditTextPreference
            android:dialogMessage="Please enter url and port from your web-adapter"
            android:key="mobile_socket_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Socket URL" />
        <EditTextPreference
            android:editable="true"
            android:inputType="text"
            android:key="mobile_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username (Optional)" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="mobile_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password (Optional)" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Cloud Connection">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pro_cloud_enabled"
            android:title="Use ioBroker.pro" />
        <EditTextPreference
            android:editable="true"
            android:inputType="textEmailAddress"
            android:key="pro_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username" />
        <EditTextPreference
            android:inputType="textPassword"
            android:key="pro_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Expert">
        <SwitchPreference
            android:key="logging_enabled"
            android:selectAllOnFocus="true"
            android:title="Logging">
        </SwitchPreference>
        <ListPreference
            android:key="logging_level"
            android:title="Logging level"
            android:defaultValue="6"
            android:entries="@array/logging_level"
            android:entryValues="@array/logging_levelValues"
            />
        <ListPreference
            android:key="state_subtitle"
            android:title="State subtitle"
            android:defaultValue="none"
            android:entries="@array/state_subtitle"
            android:entryValues="@array/state_subtitleValues"
            />
        <SwitchPreference
            android:key="sync_children"
            android:defaultValue="false"
            android:title="Sync children states">
        </SwitchPreference>
    </PreferenceCategory>
</PreferenceScreen>